<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorPrimaryText"
                fontpath="fonts/Nunito-Bold.ttf"
                android:text="$20"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/promotions_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="12-5-17 5:00AM"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_medium"
                android:id="@+id/promotions_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="AC123 Applied"
                android:layout_marginTop="16dp"
                android:layout_below="@id/promotions_date"
                android:textColor="@color/theme"
                android:textSize="@dimen/text_medium"
                android:id="@+id/promotions_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>