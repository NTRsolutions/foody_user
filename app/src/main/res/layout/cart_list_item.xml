<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dish_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/restaurant"
            android:scaleType="centerCrop"
            android:src="@drawable/login_pic" />

        <TextView
            android:id="@+id/dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/dish_img"
            android:maxLines="1"
            android:text="Bunny Burgs"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:layout_marginTop="-5dp"
            android:id="@+id/dish_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/dish_name"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/dish_img"
            android:maxLines="1"
            android:text="Burgur"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_small" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/re"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center_vertical"
           android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:drawableStart="@drawable/ic_nonveg"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Spicy Prawn Tika"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_medium" />

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            >

            <include layout="@layout/add_card_button_layout"/>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:visibility="gone"
                android:id="@+id/number_button"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/button_corner_radius_green"
                android:padding="1dp"
                app:textColor="#009909"
                app:textSize="8sp" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="$220"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>


</RelativeLayout>