<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Order Placed Layout-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/order_status_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginStart="0dp"
            android:src="@drawable/ic_order_placed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/order_status_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Order Placed"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_status_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="We have recieved your order"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_tiny" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:layout_marginStart="22dp"
        android:background="#5b5b5b"
        android:verticalSpacing="2dp" />

</LinearLayout>