<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!--     Source Address-->

        <RelativeLayout
            android:id="@+id/source_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="2dp"
                android:id="@+id/source_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_map_marker" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/source_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/address_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="SubWay"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Tarc colony, Megberg winson road, Chennai"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_tiny" />

            </LinearLayout>


        </RelativeLayout>

        <View
            android:id="@+id/dot_line"
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:layout_below="@+id/source_layout"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorSecondaryText"
            android:layerType="software" />

        <!--  Deliery Address-->

        <RelativeLayout
            android:id="@+id/destination_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dot_line">

            <ImageView
                android:padding="2dp"
                android:id="@+id/destination_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_home" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/destination_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/destination_address_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Home"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_medium" />

                <TextView

                    android:id="@+id/destination_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Washing B.C, Green Town west,Chennai"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/text_tiny" />

            </LinearLayout>


        </RelativeLayout>

        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/destination_layout"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorSecondaryText"
            android:layerType="software" />

        <!--   Order Status Layout-->

        <RelativeLayout
            android:id="@+id/order_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line2"
            android:layout_marginTop="16dp">


            <ImageView
                android:padding="3dp"
                android:id="@+id/order_succeess_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_circle_tick" />

            <TextView
                android:textSize="@dimen/text_medium"
                android:id="@+id/order_status_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/order_succeess_image"
                android:text="Order Delivered Successfully on 12-3-17, 12.00am "
                android:textColor="@color/colorGreen" />

        </RelativeLayout>



    </RelativeLayout>

    <!-- Order Detail Fragment-->

    <FrameLayout
        android:id="@+id/order_detail_fargment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

    </FrameLayout>



</LinearLayout>