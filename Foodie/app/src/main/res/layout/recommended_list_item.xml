<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    >

    <ImageView
        android:id="@+id/dishImg"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_pic" />

    <TextView
        android:id="@+id/dish_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spicy Fish Tikka"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableStart="@drawable/ic_veg"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dishImg"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starter"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_small"
        android:textColor="@color/colorSecondaryText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dish_name_text"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 $"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/category_text"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/colorSecondaryText"
        app:layout_constraintLeft_toLeftOf="@+id/dish_name_text"
        android:layout_marginStart="0dp" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/category_text" />
</android.support.constraint.ConstraintLayout>