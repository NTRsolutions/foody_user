<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dish_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spicy Fish Tikka"
        android:drawableStart="@drawable/ic_veg"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/colorSecondaryText"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/dish_name_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dish_name_text" />

    <TextView
        android:id="@+id/category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starter"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_small"
        android:textColor="@color/colorSecondaryText"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/price_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/price_text" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:backgroundTint="#FFF"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>